{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "admin_config_controls",
  "type": "object",
  "required": ["timestamp", "source", "tenant_or_account", "protected_settings", "change_constraints"],
  "properties": {
    "timestamp": { "type": "string" },
    "source": { "type": "string" },
    "tenant_or_account": { "type": "string" },
    "protected_settings": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "change_constraints": {
      "type": "object",
      "required": ["requires_change_control", "allowed_changers_scope"],
      "properties": {
        "requires_change_control": { "type": "boolean" },
        "allowed_changers_scope": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    }
  }
}

