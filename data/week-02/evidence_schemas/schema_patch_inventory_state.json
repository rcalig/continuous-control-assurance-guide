{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "patch_inventory_state",
  "type": "object",
  "required": ["timestamp", "source", "environment", "assets"],
  "properties": {
    "timestamp": { "type": "string" },
    "source": { "type": "string" },
    "environment": { "type": "string" },
    "assets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["asset_id", "hostname", "os_name", "os_version", "is_supported", "last_patch_date", "patch_compliance_state"],
        "properties": {
          "asset_id": { "type": "string" },
          "hostname": { "type": "string" },
          "os_name": { "type": "string" },
          "os_version": { "type": "string" },
          "is_supported": { "type": "boolean" },
          "last_patch_date": { "type": "string" },
          "patch_compliance_state": { "type": "string", "enum": ["compliant", "non_compliant", "unknown"] }
        }
      }
    }
  }
}

